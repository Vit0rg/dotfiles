# ------------------------------------------------------------------------------
# SCREEN SETTINGS
# ------------------------------------------------------------------------------

  startup_message off
  nethack on

# Define a bigger scrollback, default is 100 lines
  defscrollback 4096
  mousetrack on

# ------------------------------------------------------------------------------
# SCREEN KEYBINDINGS
# ------------------------------------------------------------------------------

# Remove some stupid / dangerous key bindings
  bind ^k
  # bind L
  bind ^\

# Make them better
  bind \\ quit
  bind K kill
  bind I login on
  bind O login off
  bind } history

# ------------------------------------------------------------------------------
# TERMINAL SETTINGS
# ------------------------------------------------------------------------------

# Don't block command output if the terminal stops responding
# (like if the ssh connection times out for example).
  nonblock on

# Allow editors etc. to restore display on exit
# rather than leaving existing text in place
  altscreen on

# Screen will not make an ugly screen flash instead of a bell sound.
  vbell off

# X scrolling mechanism
  termcapinfo xterm*|rxvt*|kterm*|Eterm* ti@:te@

# turn sending of screen messages to hardstatus off
  hardstatus on

# use this for the hard status string
  hardstatus string "%h%? users: %u%?"

# the following two lines give a two-line status, with the current window highlighted
  hardstatus alwayslastline
  hardstatus string "%{= kG}[%{G}%H%? %1`%?%{G}][%= %{= kw}%-w%{+b ky} %n*%t%?(%u)%? %{-}%+w %=%{g}][%{w}%m/%d %{R}%C%A%{g}]"
# %{= kG}
# [%{G}%H%? %1`%?%{g}]
# [%= %{= kw}%-w%{+b yk} %n*%t%?(%u)%? %{-}%+w %=%{g}]
# [%{B}%m/%d %{W}%C%A%{g}]

# ------------------------------------------------------------------------------
# STARTUP SCREENS
# ------------------------------------------------------------------------------

# default windows
  screen -t Main   1 bash
  screen -t Aux    2 bash
  screen -t Music  3 bash
  screen -t Doc    4 bash
  bind c screen 1 # window numbering starts at 1 not 0
  bind 0 select 10
  select 1

# get rid of silly xoff stuff
  bind s split

# ------------------------------------------------------------------------------
# Layouts
# ------------------------------------------------------------------------------

# Main window fully zoomed
  layout autosave on
  layout new one
  select 1

# Main window at h 90%, Music window at h 5%
  layout new two
  select 1
  split
  focus down
  resize -v 5
  select 3
  focus up

# Main window at v 50%, Aux window at v 50%
  layout new three
  select 1
  split -v
  focus right
  resize -h 47%
  select 3
  focus left

# Attach and layer shortcuts:
  layout attach one
  layout select one
  bindkey "LA1" layout select one
  bindkey "LA2" layout select two
  bindkey "LA3" layout select three
# ------------------------------------------------------------------------------
